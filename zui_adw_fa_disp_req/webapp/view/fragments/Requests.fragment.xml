<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:f="sap.f">
    <f:DynamicPage id="dynamicPageRequests" fitContent="true" class="sapUiNoContentPadding">
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar id="filterbarRequests" useToolbar="false" search=".onSearchRequest">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem id="fgiBtpRequestId" name="Request ID" label="{i18n>lblBtpRequestId}" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="inpRequestId" showValueHelp="true" required="true" suggest="onSuggestRequestId" showSuggestion="true" valueHelpRequest=".onRequestIdValueHelp">
                                    </Input>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>


                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="idTRequests" sticky="HeaderToolbar,ColumnHeaders" mode="None" items="{RequestItemsModel>/RequestItemsData}" growing="true" growingScrollToLoad="true">
                <headerToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                         <Button id="idEdit" text= "{i18n>btnEdit}" type="Emphasized" press="onEditAssetRequests" />
                        <!-- <Button id="idEdit" text="{= ${RequestItemsModel>/RequestItemsData/0/Zstat} === 'Rejected' || ${RequestItemsModel>/RequestItemsData/0/Zstat} === 'Save As Draft' ? ${i18n>btnEdit} : ${i18n>btnDisplay} }" type="Emphasized" press="onEditAssetRequests" /> -->
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column visible="false">
                        <Text text="{i18n>colHeaderRequestId}" />
                    </Column>
                    <Column visible="false">
                        <Text text="{i18n>colHCompanyCode}" />
                    </Column>


                    <Column>
                        <Text text="{i18n>colStatus}" />
                    </Column>
                    <Column visible="false">
                        <Text text="{i18n>colListRequestId}" />
                    </Column>
                    <Column visible="false">
                        <Text text="{i18n>colItemNumber}" />
                    </Column>
                    <Column visible="false">
                        <Text text="{i18n>colRequestDate}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>lblCompanyCode}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>colAsset}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>colAssetSub}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>colAssetClass}" />
                    </Column>
                    <Column visible="false">
                        <Text text="{i18n>colDescription}" />
                    </Column >
                    <Column visible="false">
